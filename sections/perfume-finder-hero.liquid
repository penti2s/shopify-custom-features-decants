{%- style -%}
  .perfume-finder-hero {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    margin-bottom: 2rem;
  }

  .perfume-finder-hero__title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .perfume-finder-hero__description {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.95;
    line-height: 1.6;
  }

  .perfume-finder-hero__icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  @media screen and (max-width: 749px) {
    .perfume-finder-hero {
      padding: 3rem 1.5rem;
    }

    .perfume-finder-hero__title {
      font-size: 2rem;
    }

    .perfume-finder-hero__description {
      font-size: 1.1rem;
    }
  }
{%- endstyle -%}

<div class="perfume-finder-hero color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {% if section.settings.show_icon %}
      <div class="perfume-finder-hero__icon">
        {{ section.settings.icon }}
      </div>
    {% endif %}

    <h1 class="perfume-finder-hero__title">
      {{ section.settings.title }}
    </h1>

    <p class="perfume-finder-hero__description">
      {{ section.settings.description }}
    </p>
  </div>
</div>

