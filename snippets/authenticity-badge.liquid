{% comment %}
  Renders an authenticity badge for decants

  Accepts:
  - style: {String} Badge style - 'compact', 'full', or 'inline' (default: 'compact')
  - text: {String} Custom badge text (optional)
  - show_icon: {Boolean} Show checkmark icon (default: true)

  Usage:
  {% render 'authenticity-badge' %}
  {% render 'authenticity-badge', style: 'full' %}
  {% render 'authenticity-badge', style: 'inline', text: '100% Original' %}
{% endcomment %}

{%- liquid
  assign badge_style = style | default: 'compact'
  assign badge_text = text | default: '100% Original'
  assign show_checkmark = show_icon | default: true
-%}

<style>
  .authenticity-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem 1.6rem;
    background: linear-gradient(135deg, rgba(var(--color-button), 0.1), rgba(var(--color-button), 0.05));
    border: 2px solid rgb(var(--color-button));
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 600;
    color: rgb(var(--color-button));
    white-space: nowrap;
  }

  .authenticity-badge--full {
    padding: 1.2rem 2.4rem;
    font-size: 1.6rem;
  }

  .authenticity-badge--inline {
    background: transparent;
    border: none;
    padding: 0;
    font-size: inherit;
  }

  .authenticity-badge__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border-radius: 50%;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .authenticity-badge--inline .authenticity-badge__icon {
    background: transparent;
    color: rgb(var(--color-button));
  }

  @media screen and (max-width: 749px) {
    .authenticity-badge {
      font-size: 1.2rem;
    }

    .authenticity-badge--full {
      font-size: 1.4rem;
      padding: 1rem 2rem;
    }
  }
</style>

<div class="authenticity-badge authenticity-badge--{{ badge_style }}">
  {%- if show_checkmark -%}
    <span class="authenticity-badge__icon">âœ“</span>
  {%- endif -%}
  <span class="authenticity-badge__text">{{ badge_text }}</span>
</div>
