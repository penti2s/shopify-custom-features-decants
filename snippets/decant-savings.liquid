{% comment %}
  Renders a savings callout showing how much the customer saves vs full-size perfume

  Accepts:
  - decant_price: {Number} Price of the decant (required)
  - fullsize_price: {Number} Price of full-size perfume (optional, defaults to estimate)
  - decant_size: {String} Size of decant (e.g., "5ml") (optional)
  - fullsize_size: {String} Size of full-size (e.g., "100ml") (optional)
  - show_calculation: {Boolean} Show price-per-ml calculation (default: false)

  Usage:
  {% render 'decant-savings', decant_price: 12990, fullsize_price: 180000 %}
  {% render 'decant-savings', decant_price: product.price, fullsize_price: 180000, decant_size: '5ml' %}
{% endcomment %}

{%- liquid
  assign decant_price_value = decant_price | default: 0
  assign fullsize_price_value = fullsize_price | default: 0
  assign decant_ml = decant_size | remove: 'ml' | times: 1 | default: 5
  assign fullsize_ml = fullsize_size | remove: 'ml' | times: 1 | default: 100

  # If no fullsize price provided, estimate based on typical markup
  if fullsize_price_value == 0
    assign fullsize_price_value = decant_price_value | times: fullsize_ml | divided_by: decant_ml | times: 1.5 | round
  endif

  assign savings = fullsize_price_value | minus: decant_price_value
  assign savings_percent = savings | times: 100 | divided_by: fullsize_price_value | round

  if show_calculation
    assign decant_per_ml = decant_price_value | divided_by: decant_ml | round
    assign fullsize_per_ml = fullsize_price_value | divided_by: fullsize_ml | round
  endif
-%}

